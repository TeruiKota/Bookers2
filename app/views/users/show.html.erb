<%= render "layouts/errors", book: @book_new %>
<div class="row">
  <%= render "layouts/sidebar", {book: @book_new, user: @user} %>
  <div class="col-9">
    <h2>Books</h2>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col"></th>
          <th scope="col">Title</th>
          <th scope="col">Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @user.books.each do |book| %>
          <tr>
            <th scope="row"><%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpg" %></th>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
