<%= form_for(@user) do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>
  <label for="inputInto">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputInto", placeholder: "Introduction" %>
  <%= f.submit "Edit" %>
<% end %>